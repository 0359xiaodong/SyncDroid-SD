<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.syncdroid"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" 
    			 android:label="@string/app_name"
    			 android:name="de.syncdroid.SyncApplication">
        <activity android:name="de.syncdroid.activity.ProfileListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.syncdroid.activity.ProfileEditActivity" android:label="@string/app_name"></activity>
        <activity android:name="de.syncdroid.activity.LocationEditActivity" android:label="@string/app_name"></activity>
        <activity android:name="de.syncdroid.activity.LocationListActivity" android:label="@string/app_name"></activity>
        
    	<service android:name="de.syncdroid.service.SyncService"/>
    	<service android:name="de.syncdroid.service.LocationDiscoveryService"/>
    	
        <receiver android:name="de.syncdroid.SyncBroadcastReceiver" android:process=":remote">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.ACTION_BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="de.syncdroid.service.SyncService" />
            </intent-filter>
            <intent-filter>
                <action android:name="de.syncdroid.service.LocationDiscoveryService" />
            </intent-filter>
            <intent-filter>
                <action android:name="de.syncdroid.SyncBroadcastReceiver" />
            </intent-filter>
        </receiver>
    </application>
    <uses-sdk android:minSdkVersion="4" />

	
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
</manifest> 